<!-- ***** Product Area Starts ***** -->
<section class="section" id="product">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="left-images">
                    <img src="/{{sanPham.hinhSanPham}}" alt="{{sanPham.tenSanPham}}" class="product-image">
                </div>
            </div>
            <div class="col-lg-4">
                <div class="right-content">
                    <h3 class="product-title " style="text-align:center">{{sanPham.tenSanPham}}</h3>
                    <span class="price">
                        {{#if sanPham.size}}
                        {{#each sanPham.size}}
                        <div class="size-price " style = "font-size:16px" >
                            <strong style="color: #1a1a1a;">{{this.kichCo}}:</strong> {{this.gia}} VNĐ
                        </div>
                        {{/each}}
                        {{else}}
                        <div class="size-price">
                            <strong style="color: #1a1a1a;">Giá:</strong> {{sanPham.giaBan}} VNĐ
                        </div>
                        {{/if}}
                    </span>


                    {{#if sanPham.nguyenLieuCheBien}}
                    <div class="product-ingredients">
                        <h4  style=" margin-bottom:20px ; margin-top:20px">Nguyên liệu chế biến</h4>
                        <ul>
                            {{#each sanPham.nguyenLieuCheBien}}
                            <li>
                                <strong>{{this.tenNguyenLieu}}</strong>: {{this.dinhLuong}} {{this.donVi}}
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                    {{/if}}


                    {{#if sanPham.nhaCungCap}}
                    <div class="product-supplier">
                        <h4 style="text-align:center;  magrin-bottom:20px">Nhà cung cấp:</h4>
                        <p>{{sanPham.nhaCungCap}}</p>
                    </div>
                    {{/if}}

                    <div class="product-stock">
                        <p style="font-size: 16px; font-weight: bold; color: #555; display: inline;">Số lượng còn lại:
                        </p>
                        <p class="stock-quantity" style="color: green; display: inline;">{{sanPham.soLuongTon}} sản phẩm
                        </p>
                    </div>



                    <p class="product-description">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
                        eiusmod tempor incididunt ut labore.</p>

                    <div class="quote">
                        <i class="fa fa-quote-left"></i>
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut
                            labore.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
