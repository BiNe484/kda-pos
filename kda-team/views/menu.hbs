<!-- ***** Main Banner Area Start ***** -->

<div class="page-heading" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content text-center">
                    <h2 class="fw-bold text-uppercase">Explore Our Products</h2>
                    <span class="text-muted">Discover our creative and quality products.</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->

<!-- ***** Products Area Starts ***** -->
<section class="section py-5" id="products">
    <div class="container">
        <div class="section-heading text-center mb-5">
            <h2>Main Menu</h2>
            <span class="text-muted">Browse our most recent additions.</span>
        </div>

        <div class="row">
            {{#each sanPhams}}
            {{#if this.soLuongTon}}
            <div class="col-lg-4 mb-4">
                <div class="item single-menu p-3">
                    <div class="thumb position-relative">
                        <img src="{{this.hinhSanPham}}" alt="{{this.tenSanPham}}" class="img-fluid rounded shadow-sm">
                        <div
                            class="hover-content position-absolute top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-center">
                            <a href="/menu/details/{{this._id}}" class="btn btn-light btn-sm">Xem chi tiết</a>
                        </div>
                    </div>
                    <div class="single-menu mt-3 text-center">
                        <h4 class="fw-semibold">{{this.tenSanPham}}</h4>
                        <p class="price text-primary">{{this.giaBan}} VNĐ</p>
                        <p class="status {{#if this.soLuongTon}}text-success{{else}}text-danger{{/if}} fw-bold">
                            {{#if this.soLuongTon}}Còn hàng{{else}}Hết hàng{{/if}}
                        </p>
                    </div>
                </div>
            </div>
            {{/if}}
            {{/each}}
        </div>

        <!-- Pagination -->
        <div class="pagination-wrapper d-flex justify-content-center mt-4">
            <ul class="pagination">
                {{#if (gt currentPage 1)}}
                <li><a href="?page={{subtract currentPage 1}}">«</a></li>
                {{/if}}

                {{#if (le totalPages 4)}}
                {{#each (range 1 totalPages)}}
                <li class="{{#if (eq this ../currentPage)}}active{{/if}}">
                    <a href="?page={{this}}">{{this}}</a>
                </li>
                {{/each}}
                {{else}}
                {{#each (range 1 4)}}
                <li class="{{#if (eq this ../currentPage)}}active{{/if}}">
                    <a href="?page={{this}}">{{this}}</a>
                </li>
                {{/each}}
                <li><span>...</span></li>
                <li><a href="?page={{totalPages}}">{{totalPages}}</a></li>
                {{/if}}

                {{#if (lt currentPage totalPages)}}
                <li><a href="?page={{add currentPage 1}}">»</a></li>
                {{/if}}
            </ul>
        </div>


    </div>
</section>

<!-- ***** Products Area Ends ***** -->
